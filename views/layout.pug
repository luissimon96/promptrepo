doctype html
html(lang="pt-BR")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title PromptRepo - Prompts para IA
    link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css", rel="stylesheet")
    link(href="/css/style.css", rel="stylesheet")
  body
    nav.navbar.navbar-expand-lg.navbar-dark.bg-dark
      .container
        a.navbar-brand(href="/") PromptRepo
        button.navbar-toggler(type="button", data-bs-toggle="collapse", data-bs-target="#navbarNav")
          span.navbar-toggler-icon
        #navbarNav.collapse.navbar-collapse
          ul.navbar-nav.me-auto
            li.nav-item
              a.nav-link(href="/") Início
            if isAuthenticated
              li.nav-item
                a.nav-link(href="/prompts/texto") Prompts de Texto
              li.nav-item
                a.nav-link(href="/prompts/imagem") Prompts de Imagem
              li.nav-item
                a.nav-link(href="/prompts/codigo") Prompts de Código
              li.nav-item
                a.nav-link(href="/profile") Perfil
          ul.navbar-nav
            if isAuthenticated
              li.nav-item
                a.nav-link(href="/logout") Sair
            else
              li.nav-item
                a.nav-link(href="/login") Entrar

    .container.mt-4
      block content

    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js")
    script(src="/js/main.js") 